      "src/tests/*.test.ts",
      "src/tests/**/*.test.ts"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^10.3.2",
    "ts-node": "^6.1.0",
    "typescript": "^2.9.1"
  },
  "dependencies": {
    "@chainspin/sandbox": "^0.16.0",
    "@hayspec/core": "^0.2.1",
    "@hayspec/reporter": "^0.2.1",
    "@hayspec/runner": "^0.2.1",
    "ava": "^1.0.0-beta.6",
    "lerna": "^2.11.0",
    "web3": "git+https://github.com/ethereum/web3.js#newAbiLib",
    "webpack": "^4.0.0"
  }
