{
  "name": "@chainspin/test",
  "version": "0.13.0",
  "description": "Test suits for ChainSpin framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -Rf ./dist",
    "build": "npm run clean; tsc",
    "lint": "tslint 'src/**/*.ts?(x)'",
    "prepublishOnly": "npm run build",
    "test": "NODE_NO_WARNINGS=1 mocha --require ts-node/register --inspect --recursive ./src/tests/**/*.test.ts"
  },
  "chainspin": {
    "sandboxHost": "127.0.0.1",
    "sandboxPort": 8545,
    "solcDist": "src/tests/assets",
    "testRoot": "src/tests/assets",
    "testTimeout": 60000
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^10.3.2",
    "ts-node": "^6.1.0",
    "typescript": "^2.9.1"
  },
  "dependencies": {
    "@chainspin/sandbox": "^0.13.0",
    "@chainspin/utils": "^0.13.0",
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.1",
    "chai": "^4.1.2",
    "lerna": "^2.11.0",
    "mocha": "^5.2.0",
    "web3": "git+https://github.com/ethereum/web3.js#newAbiLib",
    "webpack": "^4.0.0"
  }
}
