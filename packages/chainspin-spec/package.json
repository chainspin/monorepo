{
  "name": "@chainspin/spec",
  "version": "0.16.0",
  "description": "Test suits for ChainSpin framework.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -Rf ./dist",
    "build": "npm run clean; tsc",
    "lint": "tslint 'src/**/*.ts?(x)'",
    "prepublishOnly": "npm run build",
    "test": "ava"
  },
  "ava": {
